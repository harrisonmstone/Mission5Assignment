        header {
            background-color: #333;
            color: #fff;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            header h1 {
                margin: 0;
            }

        button {
            background-color: #007bff;
            color: #fff;
            border: none;

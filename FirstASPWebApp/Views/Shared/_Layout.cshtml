<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <!-- Ensures proper rendering and touch zooming on mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Title of the webpage -->
    <title>An Adrenaline Junky</title>
    <!-- Favicon for the website -->
    <link rel="icon" href="icon.ico" />
    <!-- jQuery library inclusion for interactive features -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Site-specific JavaScript file -->
    <script src="js/site.js"></script>
    <!-- Bootstrap CSS for styling and layout -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Site-specific stylesheet -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Additional custom stylesheet -->
    <link rel="stylesheet" href="~/FirstASPWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Bootstrap navbar for the site's navigation -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand/logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">An Adrenaline Junky</a>
                <!-- Hamburger menu for mobile view -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Navigation links -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <!-- Link to the homepage -->
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <!-- Link to the Hobby page -->
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Hobby">Hobby</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <!-- Placeholder for the main content of the page, to be rendered dynamically -->
            @RenderBody()
        </main>
    </div>

    <footer>
        <!-- Copyright and creator information -->
        <p>&copy; 2024 An Adrenaline Junky. All Rights Reserved.</p>
        <p>Designed and Built by Harrison Stone</p>
    </footer>
    <!-- Additional script inclusions for jQuery and Bootstrap functionality -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Placeholder for additional scripts that may be added on specific pages -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
